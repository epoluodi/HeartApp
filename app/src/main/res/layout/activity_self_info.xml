<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"


    >

    <RelativeLayout
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray">

        <ImageView
            android:id="@+id/btnreturn"
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_bar_left_selector" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="个人信息"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_nick"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/headview"

        android:background="@drawable/userinfo_menu_selector"
        android:clickable="true">


        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="头像"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <custome.zhongyuan.com.heartapp.CustomView.STImageView
            android:id="@+id/nickimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:src="@mipmap/default_avatar" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/blackTransparent2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_nickname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/menu_nick"
        android:background="@drawable/userinfo_menu_selector"
        android:clickable="true">

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="姓名"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/mark1"

            android:text="张飞"
            android:textColor="@color/whitesmoke"
            android:textSize="22dp" />


        <ImageView

            android:id="@+id/mark1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/jiantou_icon" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blackTransparent2" />
    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/menu_sex"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/menu_nickname"

        android:background="@drawable/userinfo_menu_selector"
        android:clickable="true">


        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="性别"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/mark6"
            android:text="男"
            android:textColor="@color/whitesmoke"
            android:textSize="22dp" />

        <ImageView

            android:id="@+id/mark6"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/jiantou_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blackTransparent2" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/menu_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/menu_sex"
        android:background="@drawable/userinfo_menu_selector"
        android:clickable="true">


        <TextView
            android:id="@+id/t9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="手机号"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/mark9"
            android:text="13955667890"
            android:textColor="@color/whitesmoke"
            android:textSize="22dp" />

        <ImageView

            android:id="@+id/mark9"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/jiantou_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blackTransparent2" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/menu_area2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/menu_phone"
        android:background="@drawable/userinfo_menu_selector"
        android:clickable="true">


        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="详细地址"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:maxHeight="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/mark4"
            android:ellipsize="end"
            android:lines="2"
            android:maxWidth="180dp"
            android:text="江苏省 南京市 白下区白下区白下区白下区白下区白下区白下区白下区白下区白下区白下区白下区"
            android:textColor="@color/whitesmoke"
            android:textSize="18dp" />

        <ImageView

            android:id="@+id/mark4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/jiantou_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blackTransparent2" />
    </RelativeLayout>












</RelativeLayout>